# tqapp htaccess

AddType application/json .json

# where are we deployed?
SetEnv TQ_BASE_URI "[% server_base_uri %]"

# proxy everything that isn't a real file or dir
# to the backend app
RequestHeader set X-Request-Base [% server_base_uri_path %]/app
RewriteEngine on

# allow deployment in non-root directory
RewriteBase [% server_base_uri_path %]/

# catch-all
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^app/(.*)   [% app_base_uri %]/$1 [P,L]
